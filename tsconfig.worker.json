{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["worker.ts", "server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "client"]
}
